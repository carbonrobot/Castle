<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewBag.Title != null ? ViewBag.Title + " - " : "")Castle</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-app="castle.app">

    <header class="header">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu-links">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img src="/content/images/castle.png" alt="" class="navbar-logo img-responsive" />
                    <a href="/" class="navbar-brand">Castle</a>
                </div>
                <div class="navbar-collapse collapse" id="menu-links">
                    <ul class="nav navbar-nav">
                        <li class="@IsActive("source")"><a href="/">Source</a></li>
                        <li class="@IsActive("library")"><a href="/library">Library</a></li>
                    </ul>
                    <p class="navbar-text navbar-right">@User.Identity.Name</p>
                </div>
            </div>
        </nav>
    </header>

    <main class="main" role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <hr />
            <p>&copy; @DateTime.Now.Year - <a href="http://www.github.com/carbonrobot/">carbonrobot</a></p>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>
        (window.jQuery || document.write('<script src="/scripts/vendor/jquery-1.11.0.min.js"><\/script>'));
    </script>

    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
@helper IsActive(string group)
{
    if (ViewBag.Group == group)
    {
        <text>active</text>
    }
}